{
	"name": "curriculum-vitae-ssr",
	"version": "1.0.0",
	"description": "CV of Adrian Jost",
	"author": "Adrian Jost",
	"private": true,
	"scripts": {
		"dev": "cross-env NODE_ENV=development nodemon src/server/index.js --watch server",
		"build": "nuxt build",
		"start": "cross-env NODE_ENV=production node src/server/index.js",
		"generate": "nuxt generate",
		"deploy": "yarn lint && yarn generate && firebase deploy",
		"lint:eslint": "eslint --fix",
		"lint:stylelint": "stylelint --fix",
		"lint:prettier": "prettier --write --loglevel warn",
		"lint:all:eslint": "yarn lint:eslint --ext .js,.vue .",
		"lint:all:stylelint": "yarn lint:stylelint \"src/**/*.{vue,sass,scss,css}\"",
		"lint:all:prettier": "yarn lint:prettier \"**/*.{js,json,css,scss,vue,html}\"",
		"lint": "run-s lint:all:*",
		"travis": "yarn lint && yarn generate"
	},
	"gitHooks": {
		"pre-commit": "cross-env PRE_COMMIT=true lint-staged"
	},
	"installConfig": {
		"pnp": true
	},
	"dependencies": {
		"@firebase/app": "^0.3.6",
		"@firebase/auth": "^0.9.1",
		"@firebase/database": "^0.3.9",
		"@firebase/firestore": "^0.9.3",
		"@johmun/vue-tags-input": "^2.0.1",
		"@nuxtjs/pwa": "^3.0.0-beta.8",
		"autosize": "^4.0.2",
		"cross-env": "^5.2.0",
		"express": "^4.16.4",
		"firebase": "^5.7.3",
		"firebaseui": "^3.5.1",
		"isomorphic-fetch": "^2.2.1",
		"nuxt": "^2.4.0",
		"vuewordcloud": "^18.7.11",
		"vuex-easy-firestore": "^1.29.0"
	},
	"devDependencies": {
		"babel-eslint": "^8.2.1",
		"cross-env": "^5.2.0",
		"eslint": "^5.13.0",
		"eslint-config-prettier": "^4.0.0",
		"eslint-loader": "^2.0.0",
		"eslint-plugin-prettier": "^3.0.1",
		"eslint-plugin-vue": "^5.1.0",
		"imagemin-lint-staged": "^0.4.0",
		"lint-staged": "^8.1.2",
		"node-sass": "^4.11.0",
		"nodemon": "^1.18.9",
		"npm-run-all": "^4.1.5",
		"prettier": "github:prettier/prettier#3de36e3",
		"sass-loader": "^7.1.0",
		"stylelint": "^9.10.1",
		"stylelint-config-prettier": "^4.0.0",
		"stylelint-config-recess-order": "^2.0.1",
		"stylelint-config-standard": "^18.2.0",
		"stylelint-scss": "^3.5.1",
		"yorkie": "^2.0.0"
	},
	"engines": {
		"node": "^8",
		"yarn": "^1.12.0"
	}
}
