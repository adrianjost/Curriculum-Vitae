{
	"name": "adrianjost-cv",
	"version": "3.1.0",
	"description": "CV of Adrian Jost",
	"author": "Adrian Jost",
	"license": "MIT",
	"scripts": {
		"dev:nuxt": "cross-env NODE_ENV=development nuxt",
		"dev:functions": "cd functions && yarn serve",
		"dev": "cross-env USE_LOCAL_API=true run-p dev:*",
		"analyze": "nuxt build --analyze",
		"build": "cross-env NODE_ENV=production nuxt generate",
		"deploy": "yarn lint && yarn build && firebase deploy",
		"lint:eslint": "eslint --fix",
		"lint:stylelint": "stylelint --fix",
		"lint:prettier": "prettier --write --loglevel warn",
		"lint:all:eslint": "yarn lint:eslint --ext .js,.vue .",
		"lint:all:stylelint": "yarn lint:stylelint \"src/**/*.{vue,sass,scss,css}\"",
		"lint:all:prettier": "yarn lint:prettier \"**/*.{js,json,css,scss,vue,html}\"",
		"lint": "run-s lint:all:*",
		"travis": "yarn lint"
	},
	"gitHooks": {
		"pre-commit": "cross-env PRE_COMMIT=true lint-staged"
	},
	"dependencies": {
		"@firebase/app": "^0.4.0",
		"@firebase/auth": "^0.12.0",
		"@firebase/firestore": "^1.1.3",
		"@firebase/storage": "^0.3.0",
		"@johmun/vue-tags-input": "^2.0.1",
		"autosize": "^4.0.2",
		"base64-img": "^1.0.4",
		"firebase": "^6.0.0",
		"firebaseui": "^4.0.0",
		"isomorphic-unfetch": "^3.0.0",
		"nuxt": "^2.8.1",
		"v-lazy-image": "^1.3.2",
		"vue-pose": "^0.5.1",
		"vuewordcloud": "^18.7.11"
	},
	"devDependencies": {
		"@nuxtjs/pwa": "^3.0.0-beta.8",
		"@nuxtjs/sitemap": "^1.0.0",
		"babel-eslint": "^10.0.1",
		"cross-env": "^6.0.0",
		"eslint": "^6.1.0",
		"eslint-config-prettier": "^6.0.0",
		"eslint-loader": "^3.0.0",
		"eslint-plugin-prettier": "^3.0.1",
		"eslint-plugin-vue": "^5.2.3",
		"imagemin-lint-staged": "^0.4.0",
		"lint-staged": "^9.0.0",
		"node-sass": "^4.11.0",
		"npm-run-all": "^4.1.5",
		"prettier": "github:prettier/prettier#3de36e3",
		"sass-loader": "^8.0.0",
		"stylelint": "^11.0.0",
		"stylelint-config-prettier": "^5.0.0",
		"stylelint-config-recess-order": "^2.0.1",
		"stylelint-config-standard": "^19.0.0",
		"stylelint-scss": "^3.5.1",
		"yorkie": "^2.0.0"
	},
	"engines": {
		"node": ">=8"
	}
}
