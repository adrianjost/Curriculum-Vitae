		"firebase-admin": "~9.8.0",
		"firebase-functions": "^3.14.1",
		"glob": "^7.1.7",
		"marked": "^2.0.5"
	},
	"devDependencies": {
		"eslint": "^7.27.0",
		"eslint-plugin-promise": "^5.1.0",
		"firebase-tools": "^9.11.0"
	},
	"engines": {
		"node": "12"
	}
}
