{
	"name": "functions",
	"description": "Cloud Functions for Firebase",
	"license": "MIT",
	"scripts": {
		"lint": "eslint . --fix",
		"serve": "npx -p firebase-tools firebase serve --only functions",
		"shell": "npx -p firebase-tools firebase functions:shell",
