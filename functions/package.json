		"deploy": "npx -p firebase-tools firebase deploy --only functions",
		"logs": "npx -p firebase-tools firebase functions:log"
	},
	"dependencies": {
		"camelcase": "^6.2.0",
		"firebase-admin": "~9.4.1",
		"firebase-functions": "^3.12.0",
		"glob": "^7.1.6",
		"marked": "^1.2.5"
	},
	"devDependencies": {
		"eslint": "^7.14.0",
		"eslint-plugin-promise": "^4.2.1",
		"firebase-tools": "^8.16.2"
	},
	"engines": {
		"node": "10"
	}
}
