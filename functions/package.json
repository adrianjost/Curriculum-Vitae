		"deploy": "npx -p firebase-tools firebase deploy --only functions",
		"logs": "npx -p firebase-tools firebase functions:log"
	},
	"dependencies": {
		"camelcase": "^6.2.0",
		"firebase-admin": "~9.6.0",
		"firebase-functions": "^3.13.2",
		"glob": "^7.1.6",
		"marked": "^2.0.3"
	},
	"devDependencies": {
		"eslint": "^7.24.0",
		"eslint-plugin-promise": "^5.1.0",
		"firebase-tools": "^9.10.0"
	},
	"engines": {
		"node": "12"
	}
}
